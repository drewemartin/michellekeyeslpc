    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </div>
  <div class="field">
    <%= label_tag 'month:'  %>
    <%= select_tag("month", options_for_select(@month_range)) %>
  </div>
  <div class="field">
    <%= label_tag 'day:'  %>
    <%= select_tag("day", options_for_select(@day_range)) %>
  </div>
  <div class="field">
    <%= label_tag 'year:'  %>
    <%= select_tag("year", options_for_select(@year_range)) %>
  </div>
  <div class="field">
    <%= label_tag 'time:'  %>
    <%= select_tag("time", options_for_select(@time_range)) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

