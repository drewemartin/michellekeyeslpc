<div class='row' id='margin15'>
  <div class='col-lg-12'>
    <div align='center'>
      <p id='welcomes_name'>Michelle Keyes, LPC</p>
    </div>
  </div>
</div>

<div class='row'>
    <div class='col-lg-3' align='center'>
    </div>
    <div class='col-lg-6' align='center' id='pic_holder'>
      <%= image_tag 'bestlotus.png', :id => 'homes_pic' %>
    </div>
    <div class='col-lg-3' align='center'>
    </div>
</div>

<div class='row'>
  <div class='col-lg-3' align='center'>
  </div>
  <div class='col-lg-6' align='center'>
    <p id='quote'><em>“Make your own recovery the first priority in your life.”</em></p>
    <h4 id='quote_author'>- Robin Norwood</h4>  
  </div>
  <div class='col-lg-3' align='center'>
  </div>
</div>


<div class="btn-group btn-group-justified" >
  <div class="btn-group">
    <%= link_to(new_letter_path) do %>
      <button type="button" class="btn btn-default">
        <span class='footer_text_color'>Contact</span>
        <br>
        <%= image_tag 'letter.png', :id => 'contact_icon' %>
      </button>
    <% end %>
  </div>
  <div class="btn-group">
    <%= link_to(therapys_path) do %>
      <button type="button" class="btn btn-default">
        <span class='footer_text_color'>Therapy</span>
        <br>
        <%= image_tag 'therapy.png', :id => 'therapy_icon' %>
      </button>
    <% end %>
  </div>  
  <div class="btn-group">
    <%= link_to(abouts_path) do %>
      <button type="button" class="btn btn-default">
        <span class='footer_text_color'>About Me</span>
        <br>
        <%= image_tag 'about.png', :id => 'about_icon' %>
      </button>
    <% end %>
  </div>
</div>









